namespace ClassDemo
{
    public class SmartLight
    {
        // Полета (Fields)

        private int brightness;

		// Свойства (Properties)

        public bool IsOn { get; set; }

        public string Color { get; set; }

        public int Brightness
		{
			get { return brightness; }
			set 
			{ 
				if(value >= 0 && value <= 100)
				{
                    brightness = value;
                }
				else
				{
                    Console.WriteLine($"Invalid value {value} for brightness.");
                    Console.WriteLine($"The brightness must be between 0 and 100.");
				}
			}
		}

		// Конструктори (Constructors)

		public SmartLight()
		{
			IsOn = false;
			Color = "White";
			Brightness = 50;
		}

		public SmartLight(string color, int brightness)
		{
			Color = color;
			Brightness = brightness;
		}

		// Методи (Methods)

		public void	TurnOn()
		{
			if(!IsOn)
			{
				IsOn = true;
                Console.WriteLine("The light is turned on.");
			}
			else
			{
                Console.WriteLine("The light is already turned on.");
			}
		}

        public void TurnOff()
        {
            if (IsOn)
            {
                IsOn = false;
                Console.WriteLine("The light is turned off.");
            }
            else
            {
                Console.WriteLine("The light is already turned off.");
            }
        }

		public void AdjustBrightness(int newBrightness)
		{
			Brightness = newBrightness;
            Console.WriteLine($"The light brightness is {Brightness}.");
		}

		public void ChangeColor(string newColor)
		{
			Color = newColor;
            Console.WriteLine($"The light color was changed to {newColor}.");
		}

		public void DisplayStatus()
		{
            Console.WriteLine("Smart light status:");
            Console.WriteLine("-------------------");
			if (IsOn)
			{
                Console.WriteLine("The light is turned on.");
			}
			else
			{
                Console.WriteLine("The light is turned off.");
			}
            Console.WriteLine($"The light color: {Color}.");
		}
    }
}
